<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.hanlinshen.classorganizer.MainMenu">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/general_education_list_button"
        android:text="General Education List"
        android:onClick="toGeneralEducationList"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/general_education_list_button"
        android:layout_alignRight="@+id/general_education_list_button"
        android:layout_below="@id/general_education_list_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/majo_class_list_button"
        android:text="Major Class List" />


</RelativeLayout>
